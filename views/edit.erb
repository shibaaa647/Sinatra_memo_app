<form class="pure-form pure-form-aligned" method="post" action="/memos/<%= @memos["id"] %>">
  <div class="pure-control-group">
    <input type="text" name="title" class="form-control" value='<%= @memos["title"]%>' input required>
  </div>
  <div class="pure-control-group">
    <textarea name="body" class="form-control" rows="5" input required><%= @memos["body"]%></textarea>
  </div>
  <input type="hidden" name="_method" value="patch">
  <input type="submit" class="pure-button pure-button-active" value="保存">

  <button class="pure-button pure-button-active" type="button"
    onclick="location.href='/memos/<%= @memos["id"]%>'">戻る</button>
</form>
